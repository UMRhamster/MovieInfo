<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/themePurple</item>
        <item name="colorPrimaryDark">@color/themeDarkPurple</item>
        <item name="colorAccent">@color/themeGreenBlue</item>
    </style>

    <!--个人中心图表应用样式-->
    <style name="personalImg">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!--个人中心文字应用样式-->
    <style name="personalTv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">14dp</item>
    </style>
    <style name="starter" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>//取消Actionbar
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>//设置全屏
        <item name="android:windowBackground">@mipmap/starter</item>//设置背景
    </style>
</resources>
