<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/rv_item_hot_bg"
    android:padding="8dp">
    <ImageView
        android:contentDescription="@null"
        android:id="@+id/rv_item_hot_iv"
        android:layout_centerVertical="true"
        android:layout_width="80dp"
        android:layout_height="112dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/rv_item_hot_iv"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/rv_item_hot_rl"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/rv_item_hot_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@android:color/black"
                android:lines="1"/>
            <TextView
                android:id="@+id/rv_item_hot_genres"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/black"
                android:gravity="end"
                android:lines="1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/rv_item_hot_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rv_item_hot_rl"
            android:maxLines="2"
            android:ellipsize="end"/>
        <LinearLayout
            android:id="@+id/rv_item_hot_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginEnd="30dp"
            android:layout_below="@id/rv_item_hot_summary"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/rv_item_hot_pinglun_renshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="12sp"
                android:lines="1"/>
            <TextView
                android:id="@+id/rv_item_hot_xiangkan_renshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:lines="1"/>
            <TextView
                android:id="@+id/rv_item_hot_kanguo_renshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="12sp"
                android:ellipsize="end"
                android:lines="1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/rv_item_hot_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rv_item_hot_ll"
            android:lines="1"/>
        <ImageView
            android:contentDescription="@null"
            android:id="@+id/rv_item_hot_rank_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_alignBottom="@id/rv_item_hot_year"
            android:layout_alignEnd="@id/rv_item_hot_rl"
            android:src="@drawable/box_order_default"/>
        <TextView
            android:id="@+id/rv_item_hot_rank_tv"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/rv_item_hot_rank_iv"
            android:layout_alignStart="@id/rv_item_hot_rank_iv"
            android:layout_alignTop="@id/rv_item_hot_rank_iv"
            android:layout_alignBottom="@id/rv_item_hot_rank_iv"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#707e7e"/>
    </RelativeLayout>
</RelativeLayout>