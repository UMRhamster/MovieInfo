<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/rv_item_hot_bg"
    android:padding="8dp">
    <ImageView
        android:id="@+id/rv_item_hot_iv"
        android:layout_centerVertical="true"
        android:layout_width="80dp"
        android:layout_height="112dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/rv_item_hot_iv"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/rv_item_hot_rl"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/rv_item_hot_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@android:color/black"
                android:text="我不是药神"
                android:lines="1"/>
            <TextView
                android:id="@+id/rv_item_hot_genres"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/black"
                android:text="喜剧、剧情"
                android:gravity="end"
                android:lines="1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/rv_item_hot_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rv_item_hot_rl"
            android:maxLines="2"
            android:text="得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到得到"
            android:ellipsize="end"/>
        <LinearLayout
            android:id="@+id/rv_item_hot_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginEnd="30dp"
            android:layout_below="@id/rv_item_hot_summary"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/rv_item_hot_pinglun_renshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论:111"
                android:textSize="12sp"
                android:lines="1"/>
            <TextView
                android:id="@+id/rv_item_hot_xiangkan_renshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="想看:111"
                android:textSize="12sp"
                android:lines="1"/>
            <TextView
                android:id="@+id/rv_item_hot_kanguo_renshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="看过:111"
                android:textSize="12sp"
                android:ellipsize="end"
                android:lines="1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/rv_item_hot_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rv_item_hot_ll"
            android:text="上映时间:2018"
            android:lines="1"/>
    </RelativeLayout>
</RelativeLayout>