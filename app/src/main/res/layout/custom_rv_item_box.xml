<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/rv_item_hot_bg"
    android:padding="8dp">
    <ImageView
        android:id="@+id/rv_item_box_iv"
        android:layout_centerVertical="true"
        android:layout_width="80dp"
        android:layout_height="112dp" />
    <RelativeLayout
        android:id="@+id/rv_item_box_rl_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/rv_item_box_iv"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/rv_item_box_rl"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/rv_item_box_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@android:color/black"
                android:text="我不是药神"
                android:lines="1"/>
            <TextView
                android:id="@+id/rv_item_box_genres"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/black"
                android:text="喜剧、剧情"
                android:gravity="end"
                android:lines="1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/rv_item_box_title_original"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rv_item_box_rl"
            android:maxLines="2"
            android:text="dafdsf"
            android:textSize="12sp"
            android:ellipsize="end"/>
        <LinearLayout
            android:id="@+id/rv_item_box_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginEnd="30dp"
            android:layout_below="@id/rv_item_box_title_original"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/rv_item_box_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="票房：8848800020"/>
        </LinearLayout>
        <TextView
            android:id="@+id/rv_item_box_isnew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/box_movie_new_bg"
            android:text="NEW"
            android:textColor="@android:color/white"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_below="@id/rv_item_box_ll"/>
        <TextView
            android:id="@+id/rv_item_box_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/rv_item_box_isnew"
            android:layout_below="@id/rv_item_box_ll"
            android:text="上映时间:2018"
            android:lines="1"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/rv_item_box_rank_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_alignBottom="@id/rv_item_box_iv"
        android:layout_alignEnd="@id/rv_item_box_rl_rl"
        android:src="@drawable/box_order_default"/>
    <TextView
        android:id="@+id/rv_item_box_rank_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/rv_item_box_rank_iv"
        android:layout_alignStart="@id/rv_item_box_rank_iv"
        android:layout_alignTop="@id/rv_item_box_rank_iv"
        android:layout_alignBottom="@id/rv_item_box_rank_iv"
        android:text="1"
        android:textStyle="bold"
        android:paddingTop="12dp"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="#707e7e"/>
</RelativeLayout>