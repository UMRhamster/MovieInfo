<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <RelativeLayout
            android:id="@+id/fragment_personal_rl_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/fragment_personal_iv_bg"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:scaleType="centerCrop"
                android:src="@drawable/celebrity_item_zanwu"/>
            <com.whut.umrhamster.movieinfo.view.CircleImageView
                android:id="@+id/fragment_personal_civ"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:src="@drawable/celebrity_item_zanwu"
                app:border_color="@android:color/white"
                app:border_width="1dp"/>
            <TextView
                android:id="@+id/fragment_personal_tv_name"
                android:layout_below="@id/fragment_personal_civ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:text="点击登陆"
                android:padding="10dp"
                android:textColor="@android:color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_personal_iv_bg"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/fragment_personal_shoucang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:selectableItemBackground">
                    <ImageView
                        android:id="@+id/fragment_personal_iv_shoucang"
                        android:src="@drawable/personal_shoucang"
                        style="@style/personalImg"/>
                    <TextView
                        android:id="@+id/fragment_personal_tv_shouchang"
                        android:layout_toEndOf="@id/fragment_personal_iv_shoucang"
                        android:text="我的收藏"
                        style="@style/personalTv"/>
                    <View
                        android:layout_alignStart="@id/fragment_personal_tv_shouchang"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dddddd"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/fragment_personal_pinglun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:selectableItemBackground">
                    <ImageView
                        android:id="@+id/fragment_personal_iv_pinglun"
                        android:src="@drawable/personal_pinglun"
                        style="@style/personalImg"/>
                    <TextView
                        android:id="@+id/fragment_personal_tv_pinglun"
                        android:layout_toEndOf="@id/fragment_personal_iv_pinglun"
                        android:text="我的评论"
                        style="@style/personalTv"/>
                    <View
                        android:layout_alignStart="@id/fragment_personal_tv_pinglun"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dddddd"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/fragment_personal_mima"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:selectableItemBackground">
                    <ImageView
                        android:id="@+id/fragment_personal_iv_mima"
                        android:src="@drawable/personal_mima"
                        style="@style/personalImg"/>
                    <TextView
                        android:id="@+id/fragment_personal_tv_mima"
                        android:layout_toEndOf="@id/fragment_personal_iv_mima"
                        android:text="修改信息"
                        style="@style/personalTv"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#ededed"/>
                <RelativeLayout
                    android:id="@+id/fragment_personal_zhuxiao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:selectableItemBackground">
                    <ImageView
                        android:id="@+id/fragment_personal_iv_zhuxiao"
                        android:src="@drawable/personal_zhuxiao"
                        style="@style/personalImg"/>
                    <TextView
                        android:id="@+id/fragment_personal_tv_zhuxiao"
                        android:layout_toEndOf="@id/fragment_personal_iv_zhuxiao"
                        android:text="注销"
                        style="@style/personalTv"/>
                    <View
                        android:layout_alignStart="@id/fragment_personal_tv_zhuxiao"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dddddd"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/fragment_personal_guanyu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:selectableItemBackground">
                    <ImageView
                        android:id="@+id/fragment_personal_iv_guanyu"
                        android:src="@drawable/personal_guanyu"
                        style="@style/personalImg"/>
                    <TextView
                        android:id="@+id/fragment_personal_tv_guanyu"
                        android:layout_toEndOf="@id/fragment_personal_iv_guanyu"
                        android:text="关于"
                        style="@style/personalTv"/>
                    <View
                        android:layout_alignStart="@id/fragment_personal_tv_guanyu"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dddddd"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>