<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:selectableItemBackground">
    <ImageView
        android:contentDescription="@null"
        android:id="@+id/custom_rv_item_search_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/search_history_icon"/>
    <TextView
        android:id="@+id/custom_rv_item_search_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/custom_rv_item_search_iv"
        android:layout_centerVertical="true"
        android:textSize="14sp"
        android:text="@string/search_history_record"/>
    <ImageView
        android:contentDescription="@null"
        android:id="@+id/custom_rv_item_search_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="8dp"
        android:layout_centerVertical="true"
        android:src="@drawable/search_history_delete"
        android:layout_alignParentEnd="true"/>
    <View
        android:id="@+id/custom_rv_item_search_v"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/custom_rv_item_search_iv"
        android:background="#8a8a8a"/>

</RelativeLayout>