<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context="com.whut.umrhamster.movieinfo.activity.SignUpActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/signup"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:id="@+id/ac_signup_rl_name"
        android:background="@drawable/login_et_bg"
        android:layout_marginTop="220dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/ac_signup_rl_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用&#8194;户&#8194;名"
            android:layout_centerVertical="true" />
        <EditText
            android:id="@+id/ac_signup_rl_name_et"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/ac_signup_rl_name_tv"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="16位英文、数字"
            android:maxLength="16"
            android:textSize="14sp"
            android:padding="4dp"
            android:background="@null"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ac_signup_rl_nickname"
        android:layout_below="@id/ac_signup_rl_name"
        android:background="@drawable/login_et_bg"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/ac_signup_rl_nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵&#8194;&#8194;&#8194;&#8194;称"
            android:layout_centerVertical="true" />
        <EditText
            android:id="@+id/ac_signup_rl_nickname_et"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/ac_signup_rl_nickname_tv"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="20位中文、英文"
            android:maxLength="20"
            android:textSize="14sp"
            android:padding="4dp"
            android:background="@null"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ac_signup_rl_password"
        android:layout_below="@id/ac_signup_rl_nickname"
        android:background="@drawable/login_et_bg"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/ac_signup_rl_password_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密&#8194;&#8194;&#8194;&#8194;码"
            android:layout_centerVertical="true" />
        <EditText
            android:id="@+id/ac_signup_rl_password_et"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/ac_signup_rl_password_tv"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="16位英文、数字"
            android:maxLength="16"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:padding="4dp"
            android:background="@null"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ac_signup_rl_password_queren"
        android:layout_below="@id/ac_signup_rl_password"
        android:background="@drawable/login_et_bg"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/ac_signup_rl_password_queren_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:layout_centerVertical="true" />
        <EditText
            android:id="@+id/ac_signup_rl_password_queren_et"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/ac_signup_rl_password_queren_tv"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="16位英文、数字"
            android:maxLength="16"
            android:textSize="14sp"
            android:padding="4dp"
            android:background="@null"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/ac_signup_btn_zhuce"
        android:layout_below="@id/ac_signup_rl_password_queren"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/signup_btn_zhuce_bg"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/white"
        android:clickable="true"
        android:focusable="true"
        android:text="注册"
        android:gravity="center"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/ac_signup_btn_denglu"
        android:layout_below="@id/ac_signup_btn_zhuce"
        android:background="@drawable/signup_btn_denglu_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true"
        android:textColor="@android:color/white"
        android:text="前往登陆"
        android:gravity="center"
        android:padding="10dp"/>

</RelativeLayout>
