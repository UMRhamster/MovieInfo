<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/custom_rv_item_search_search_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingStart="8dp"
        android:layout_marginEnd="10dp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_toStartOf="@id/custom_rv_item_search_search_genres"
        android:textColor="@android:color/black"/>
    <TextView
        android:paddingTop="8dp"
        android:id="@+id/custom_rv_item_search_search_genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingEnd="8dp" />
    <RelativeLayout
        android:id="@+id/custom_rv_item_search_search_rl"
        android:layout_below="@id/custom_rv_item_search_search_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">
        <TextView
            android:id="@+id/custom_rv_item_search_search_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_rv_item_search_tv_bg"
            android:layout_centerVertical="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textSize="10sp"
            android:textColor="@android:color/white"/>
        <ImageView
            android:id="@+id/custom_rv_item_search_search_rl_dir_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/custom_rv_item_search_search_year"
            android:src="@drawable/directors"/>
        <TextView
            android:id="@+id/custom_rv_item_search_search_directors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/custom_rv_item_search_search_rl_dir_iv"
            android:maxLines="2"
            android:ellipsize="end" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/custom_rv_item_search_search_year"
            android:layout_marginTop="16dp"
            android:background="#8a8a8a"/>
    </RelativeLayout>
</RelativeLayout>