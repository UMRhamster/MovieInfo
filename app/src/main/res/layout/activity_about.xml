<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.whut.umrhamster.movieinfo.activity.AboutActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/ac_about_tb"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/themeDarkPurple"
        app:contentInsetStart="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/ac_about_iv_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:background="?android:selectableItemBackgroundBorderless"
                android:src="@drawable/back"/>
            <TextView
                android:id="@+id/ac_about_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="关于"
                android:textSize="18sp"
                android:textColor="@android:color/white"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/ac_about_address_title"
        android:layout_below="@id/ac_about_tb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="项目地址："/>
    <TextView
        android:id="@+id/ac_about_address_content"
        android:layout_below="@id/ac_about_address_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="https://github.com/UMRhamster/MovieInfo"/>
    <TextView
        android:id="@+id/ac_about_contact_title"
        android:layout_below="@id/ac_about_address_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系我们："/>
    <TextView
        android:id="@+id/ac_about_contact_content"
        android:layout_below="@id/ac_about_contact_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1242127559@qq.com"/>
</RelativeLayout>
